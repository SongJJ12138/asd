<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/skyblue">
        <LinearLayout
            android:id="@+id/bt_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@mipmap/back"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="返回"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="博物馆导览"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_daolan_flame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/background"/>
       <LinearLayout
           android:id="@+id/layout_daolan_small"
           android:alpha="0.5"
           android:layout_gravity="bottom"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/bt_daolan_showContent"
               android:layout_gravity="center"
               android:padding="5dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:background="@mipmap/upup"/>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_daolan_dig"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageView
                android:id="@+id/bt_daolan_dismissContent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/downdown"/>
            <ImageView
                android:id="@+id/im_daolan_pic"
                android:layout_gravity="center"
                android:background="@mipmap/background"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
            <com.bigman.wmzx.customcardview.library.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"


                app:endColor="@color/white"
                app:startColor="@color/black"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:topDelta="-1">
                <TextView
                    android:id="@+id/tv_daolan_str"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="这是一段测试数据"/>
            </com.bigman.wmzx.customcardview.library.CardView>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bt_daolan_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@mipmap/play"/>
        <SeekBar
            android:id="@+id/tv_daolan_seekbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_daolan_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="- -"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text=" / "/>
        <TextView
            android:id="@+id/tv_daolan_alltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="- -"/>
    </LinearLayout>
</LinearLayout>