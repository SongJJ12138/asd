<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/burlywood">
        <LinearLayout
            android:id="@+id/bt_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@mipmap/back"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="返回"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title_text"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="博物馆导览"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_daolan_flame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@mipmap/background"/>
        <ImageView
            android:id="@+id/mine_weizhi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/weizhi"/>
        <RelativeLayout
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:orientation="vertical">
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/animation" />
            <LinearLayout
                android:id="@+id/bt_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wan_background"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/image">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/language"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语言"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_lixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wan_background"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/bt_language">
                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/donload"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="离线"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wan_background"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/bt_lixian">
                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/clear"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wan_background"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/bt_clear">
                <ImageButton
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/off"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动"/>
            </LinearLayout>
        </RelativeLayout>

       <LinearLayout
           android:id="@+id/layout_daolan_small"
           android:alpha="0.5"
           android:layout_gravity="bottom"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/burlywood"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/bt_daolan_showContent"
               android:layout_gravity="center"
               android:padding="5dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@mipmap/upup"/>
       </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_daolan_dig"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFEFD5	">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/bt_daolan_dismissContent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/downdown"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/im_daolan_pic"
                android:src="@mipmap/pic"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <com.bigman.wmzx.customcardview.library.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_daolan_str"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="这是一段测试数据"/>
                </ScrollView>
            </com.bigman.wmzx.customcardview.library.CardView>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/bt_daolan_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/play"/>
        <SeekBar
            android:layout_centerVertical="true"
            android:id="@+id/tv_daolan_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/bt_daolan_play"/>
        <TextView
            android:id="@+id/tv_daolan_alltime"
            android:layout_below="@id/tv_daolan_seekbar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="- -"/>
        <TextView
            android:id="@+id/tv_sss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_daolan_seekbar"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/tv_daolan_alltime"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text=" / "/>
        <TextView
            android:id="@+id/tv_daolan_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_below="@id/tv_daolan_seekbar"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/tv_sss"
            android:textStyle="bold"
            android:text="- -"/>


    </RelativeLayout>
</LinearLayout>